<div class="is-fullheight is-bold hero">
  <div class="has-text-centered hero-body">
    <div class="container" style="max-width:256px">

      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.label :email, class: 'label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.label :password, class: 'label' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>

        <div class="field">
          <div class="control">
            <%= f.submit "Log in", class: 'button is-link' %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
